@{
    ViewData["Title"] = "Login";
}
@using (@Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "form" }))
{
    
    <div cl></div>
    <section class="card">
        <header class="card-header">
            <div class="card-actions">
                <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            </div>

            <h2 class="card-title">Login</h2>

        </header>
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-3 control-label text-sm-right pt-2"> Usuário </label>
                <div class="col-sm-8 mr-2">
                    <input type="text" placeholder="eg:. candidato-evolucional"
                           required title="Por favor informe o Usuário"
                           id="usuario" name="usuario" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 control-label text-sm-right pt-2">Senha </label>
                <div class="col-sm-8 mr-2">
                    <input type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');"
                           placeholder="eg:. 123456" required title="Por favor informe a senha"
                           id="senha" name="senha" class="form-control">
                </div>
            </div>
        </div>
    </section>

    <footer class="card-footer">
        <div class="row justify-content-end">
            <div class="col-sm-9">
                <button class="btn  btn-primary pull-left mr-2">Entrar &nbsp;&nbsp;<i class="fa fa-key"></i></button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-dark pull-left">Voltar &nbsp;&nbsp;<i class="fa fa-reply"></i></a>

            </div>
        </div>
    </footer>
}

@section Css{
    <link href="~/js/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/js/pnotify/pnotify.custom.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/js/pnotify/pnotify.custom.js"></script>
    <script src="~/js/jquery-validation/jquery.validate.js"></script>

    <script>
        (function ($) {

            'use strict';

            $("#form").validate({
                highlight: function (label) {
                    $(label).closest('.form-group').removeClass('has-success').addClass('has-error');
                },
                success: function (label) {
                    $(label).closest('.form-group').removeClass('has-error');
                    label.remove();
                },
                errorPlacement: function (error, element) {
                    var placement = element.closest('.input-group');
                    if (!placement.get(0)) {
                        placement = element;
                    }
                    if (error.text() !== '') {
                        placement.after(error);
                    }
                }
            });

        }).apply(this, [jQuery]);
        // mensagens e notificaçoes
        (function ($) {

            'use strict';
            var notify = @ViewBag.NotifyMessage;
            var messagem = '@ViewBag.Notify';

            if (notify===0) {
                new PNotify({
                    title: 'Login',
                    text: messagem,
                    type: 'success'
                });
            }else if (notify === 1) {
                new PNotify({
                    title: 'Login',
                    text: messagem,
                    type: 'warning'
                });
            }else if (notify === 2) {
                new PNotify({
                    title: 'Login',
                    text: messagem,
                    type: 'error'
                });
            }



        }).apply(this, [jQuery]);
    </script>
}